# Development Environment Configuration for SonarQube MCP

# =============================================================================
# SONARQUBE CONFIGURATION
# =============================================================================
# Get your token from SonarQube: My Account > Security > Generate Token
# IMPORTANT: Replace this with your actual SonarQube token
SONARQUBE_TOKEN=YOUR_SONARQUBE_TOKEN

# Optional: Organization key for SonarCloud (leave empty for SonarQube Server)
SONARQUBE_ORGANIZATION=

# =============================================================================
# SERVICE URLS (Internal Docker Network)
# =============================================================================
# These URLs are used for container-to-container communication
# DO NOT change these unless you modify the docker-compose service names
SONARQUBE_INTERNAL_URL=http://sonarqube:9000/sonarqube
MCP_SERVER_INTERNAL_URL=http://mcp-server:8001

# =============================================================================
# EXTERNAL ACCESS URLS
# =============================================================================
# These URLs are for browser access from your host machine
SONARQUBE_EXTERNAL_URL=http://localhost:9000/sonarqube
MCP_SERVER_EXTERNAL_URL=http://localhost:8001
STREAMLIT_EXTERNAL_URL=http://localhost:8501

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=sonarqube
POSTGRES_USER=sonarqube
POSTGRES_PASSWORD=sonarqube_dev_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis_dev_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Cache time-to-live in seconds (shorter for development)
CACHE_TTL=60

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# Enable debug mode for development
SERVER_DEBUG=true

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
# Allow browser access in development
STREAMLIT_SERVER_HEADLESS=false

# Disable usage statistics
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# JAVA MEMORY CONFIGURATION (Reduced for Development)
# =============================================================================
# SonarQube Compute Engine memory settings
SONAR_CE_JAVAOPTS=-Xmx512m -Xms256m

# SonarQube Web Server memory settings
SONAR_WEB_JAVAOPTS=-Xmx512m -Xms256m

# =============================================================================
# DEVELOPMENT TOOLS CONFIGURATION
# =============================================================================
# pgAdmin default credentials
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin