# Development Environment Configuration for SonarQube MCP
# =============================================================================
# CORE SERVICES CONFIGURATION
# =============================================================================

# SonarQube Configuration
SONARQUBE_URL=http://sonarqube:9000/sonarqube
SONARQUBE_TOKEN=your_sonarqube_token_here
SONARQUBE_ORGANIZATION=  # Optional for community edition

# PostgreSQL Database Configuration
POSTGRES_DB=sonarqube_dev
POSTGRES_USER=sonarqube_dev
POSTGRES_PASSWORD=dev_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Cache Configuration
REDIS_URL=redis://:dev_redis_password@redis:6379/0
REDIS_PASSWORD=dev_redis_password
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_SERVER_LOG_LEVEL=DEBUG
MCP_SERVER_URL=http://mcp-server:8000

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_ENABLE_CORS=true
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# =============================================================================
# PERFORMANCE AND CACHING
# =============================================================================

# Cache Configuration
CACHE_TTL=60  # Shorter cache for development
CACHE_ENABLED=true
CACHE_MAX_SIZE=1000

# Performance Configuration
MAX_RETRIES=3
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=5
MAX_CONNECTIONS=50

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Configuration (relaxed for development)
SECRET_KEY=dev_secret_key_change_in_production
HTTPS_ONLY=false
SECURE_COOKIES=false
SESSION_TIMEOUT=3600

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=plain
LOG_FILE=logs/sonarqube-mcp-dev.log
SERVER_DEBUG=true

# Development Configuration
DEBUG=true
DEVELOPMENT_MODE=true
ENABLE_PROFILING=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=7d

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3000
GRAFANA_ALLOW_SIGNUP=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=sonarqube-mcp-dev

# Resource Limits (development)
POSTGRES_MEMORY_LIMIT=512m
REDIS_MEMORY_LIMIT=256m
SONARQUBE_MEMORY_LIMIT=1g
MCP_SERVER_MEMORY_LIMIT=512m
STREAMLIT_MEMORY_LIMIT=512m
NGINX_MEMORY_LIMIT=128m
PROMETHEUS_MEMORY_LIMIT=512m
GRAFANA_MEMORY_LIMIT=256m

# Port Configuration
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Flags
ENABLE_METRICS_COLLECTION=true
ENABLE_HEALTH_CHECKS=true
ENABLE_BACKUP_AUTOMATION=false
ENABLE_SSL_VERIFICATION=false

# JVM Configuration
SONAR_WEB_JAVAOPTS=-Xmx512m -Xms256m
SONAR_CE_JAVAOPTS=-Xmx512m -Xms256m